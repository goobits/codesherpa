{
	"name": "@goobits/sherpa",
	"version": "1.0.10",
	"description": "CLI guard for safer AI coding - blocks dangerous bash commands and manages output context",
	"type": "module",
	"bin": {
		"sherpa": "dist/cli.js"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"rules.json",
		"config.json"
	],
	"scripts": {
		"build": "tsc --emitDeclarationOnly && node scripts/build.mjs",
		"dev": "tsc --watch",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"prepublishOnly": "pnpm run build && pnpm run test"
	},
	"keywords": [
		"claude",
		"claude-code",
		"mcp",
		"ai",
		"coding",
		"safety",
		"hooks",
		"bash",
		"guard"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/goobits/sherpa.git",
		"directory": "packages/sherpa"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.0.0",
		"bash-parser": "^0.5.0",
		"glob": "^10.4.0",
		"ignore": "^5.3.0",
		"openai": "^4.77.0",
		"tiktoken": "^1.0.0"
	},
	"devDependencies": {
		"@goobits/sherpa-core": "workspace:*",
		"esbuild": "^0.23.0",
		"vitest": "^2.0.0"
	}
}
